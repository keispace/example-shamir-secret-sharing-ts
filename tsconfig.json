{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist/esm",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["*.ts", "src/index.ts"],
    "exclude": ["node_modules", "dist"]
}
